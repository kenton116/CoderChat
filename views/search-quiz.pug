extends layout

block content
  h1 検索結果: #{tag}
     
  div.quiz-list
    - var hasQuizzes = quizzes.length > 0
    if (hasQuizzes)
      div.table-warp
        table.table
          tr
            th クイズ名
            th 作成者
            th 更新日時
            th ⭐️ お気に入り
          each quiz in quizzes
            tr
              td
                a(href=`/quiz/${quiz.quizId}`) #{quiz.quizName}
              td 
                a(href=`/user/${quiz.createdBy}`) #{quiz.createUser}
              td #{quiz.updatedAt}
              td #{quiz.star}
    else 
      h4 クイズが見つかりませんでした
      h3 次の中から検索してください
      ul 
        li HTML/CSS/Markdown 
        li Javascript
        li Node.js
        li Python 
        li Java
        li C 
        li C++
        li C#
        li Ruby 
        li Ruby on Rails 
        li Go 
        li PHP 
        li Larabel 
        li Git/Github
        li Linux 
        li Network 
        li Database 
        li Security 
        li Other

  form(method="post" action="/quiz/search").form#search
    input(type="search" name="search" placeHolder="検索したいタグを入力" required).form-control
    button(type="submit").btn.btn-outline-primary 検索