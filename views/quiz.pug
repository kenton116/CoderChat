extends layout

block content
  h2 #{quiz.quizName}
  h4 クイズID #{quiz.quizId}
  div.card.my-3 
    div.card-body
      h3 Q.  #{quiz.question}
      h3 A.  #{quiz.answer}
      h3 🏷  #{quiz.tag}
    div.card-footer
      p 作成者: #{quiz.createUser}
      p 更新日時 #{quiz.updatedAt}
      - var isMineOrAdmin = user.id === quiz.createdBy || user.id === adminGithub || user.id === adminGoogle
      if isMineOrAdmin
        div
          a(href=`/quiz/${quiz.quizId}/edit`).btn.btn-info このクイズを編集する
      div#report
        form(method="post" action="/room/quiz/report")#report-form
          input(type="hidden" name="_csrf" value!=csrfToken)
          input(type="hidden" name="quizId" value=`${quiz.quizId}`)#report-quiz-id
          button(type="submit").btn.btn-danger このクイズを報告
      div#star
        form(method="post" action="/room/quiz/star")#star-form
          input(type="hidden" name="_csrf" value!=csrfToken)
          input(type="hidden" name="quizId" value=`${quiz.quizId}`)#star-quiz-id
          button(type="submit").btn.btn-info ⭐️をつける