extends layout

block content
  h2 #{quiz.quizName}
  h4 クイズID #{quiz.quizId}
  div.card.my-3 
    div.card-body
      h3 Q.  #{quiz.question}
      button#answer-button.btn.btn-info 答えを表示
      div.answer
        h3 A.  #{quiz.answer}
      h3 🏷 #{quiz.tag}
    div.card-footer
      p ⭐️お気に入り #{quiz.star} 個獲得！
      p 作成者: #{quiz.createUser}
      p 更新日時 #{quiz.updatedAt}
      - var isMineOrAdmin = user.id === quiz.createdBy || user.id === adminGithub || user.id === adminGoogle
      if isMineOrAdmin
        div
          a(href=`/quiz/${quiz.quizId}/edit`).btn.btn-info このクイズを編集する